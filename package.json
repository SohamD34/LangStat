{
  "name": "language-statistics",
  "displayName": "Language Statistics",
  "description": "Shows programming language statistics for your workspace",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "languageStatsContainer",
          "title": "Language Statistics",
          "icon": "$(graph-line)"
        }
      ]
    },
    "views": {
      "languageStatsContainer": [
        {
          "id": "languageStats",
          "name": "Statistics",
          "when": "workbenchState != empty"
        }
      ]
    },
    "commands": [
      {
        "command": "languageStats.refresh",
        "title": "Refresh Statistics",
        "icon": "$(refresh)"
      },
      {
        "command": "languageStats.analyze",
        "title": "Analyze Workspace",
        "icon": "$(graph)"
      },
      {
        "command": "languageStats.showSummary",
        "title": "Show Summary",
        "icon": "$(info)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "languageStats.analyze",
          "when": "view == languageStats",
          "group": "navigation@1"
        },
        {
          "command": "languageStats.refresh",
          "when": "view == languageStats",
          "group": "navigation@2"
        },
        {
          "command": "languageStats.showSummary",
          "when": "view == languageStats",
          "group": "navigation@3"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/node": "14.x",
    "typescript": "^4.4.4"
  }
}